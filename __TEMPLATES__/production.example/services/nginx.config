upstream <%= config.web_server.socket_name %> {
  <% if config.tools.app_server == 'unicorn' %>
    server unix:<%= kit.shared_sockets_path %>/unicorn.sock fail_timeout=15;
  <% elsif config.tools.app_server == 'puma' %>
    server unix:<%= kit.shared_sockets_path %>/puma.sock fail_timeout=15;
  <% end %>
}

# REDIRECT: Any subdomain to main domain
#
server {
  listen 80;
  server_name *.<%= config.web_server.domain %>;

  access_log <%= kit.shared_logs_path %>/<%= config.app.name %>.log;
  error_log  <%= kit.shared_logs_path %>/<%= config.app.name %>.errors.log;

  rewrite ^ http://<%= config.web_server.domain %>$uri permanent;
}

server{
  listen 80 default_server;
  server_name <%= config.web_server.domain %>;

  <% if config.tools.ssl %>
    if ($ssl_protocol = "") {
      rewrite ^ https://<%= config.web_server.domain %>$uri permanent;
    }

    listen 443 ssl;

    ssl_certificate     <%= kit.ssl_path %>/<%= config.ssl.bundle_crt %>;
    ssl_certificate_key <%= kit.ssl_path %>/<%= config.ssl.private_key %>;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers  "HIGH:!RC4:!aNULL:!MD5:!kEDH";

    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;

    ssl_stapling on;
    ssl_stapling_verify on;
    add_header Strict-Transport-Security max-age=15768000;
  <% end %>

  deny 5.18.83.52;
  deny 91.242.33.8;

  ### ~  case sensitive   http user agent blocking  ###
  ### ~* case insensitive http user agent blocking  ###
  if ($http_user_agent ~* (MegaIndex|AcoiRobot|majestic12) ) {
    return 403;
  }

  # Logs
  access_log <%= kit.shared_logs_path %>/<%= config.app.name %>.log;
  error_log  <%= kit.shared_logs_path %>/<%= config.app.name %>.errors.log;

  # etag off;

  charset utf-8;
  proxy_intercept_errors on;

  root <%= kit.current_path %>/public;
  client_max_body_size 256m;

  error_page 502 503 504 /maintenance.html;

  # /system/maintenance/index.html

  location ~ ^/(assets|uploads|special_posts|images|system|default_images)/ {
    expires max;
    gzip_static on;
    add_header Cache-Control public;
  }

  location / {
    try_files $uri @web_site;
  }

  location @web_site {
    proxy_pass http://<%= config.web_server.socket_name %>;

    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_read_timeout 300;
    proxy_buffer_size 16k;
    proxy_buffers 32 16k;

    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # WebSocket configure
  location /app-cable {
    proxy_pass http://<%= config.web_server.socket_name %>;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }

  location ~ /\.git {
    deny all;
  }

  location ~ /\.ht {
    deny all;
  }

  location ~ /\.svn {
    deny all;
  }

  location ^~ /awstatsicons/ {
    alias /var/www/awstats/icon/;
  }
}
