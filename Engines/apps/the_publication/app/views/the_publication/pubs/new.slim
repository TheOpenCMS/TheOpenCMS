ruby:
  scope = [:views, @pub.class.to_s.downcase.pluralize, :new_form]
  editor_scope = scope + [:editor_type_options]

  options_hash = [:ckeditor, :plain].inject({}) do |hash, item|
    key = t(item, scope: editor_scope)
    hash[key] = item
    hash
  end

  options = options_for_select(options_hash, @pub.editor_type)

.pub_form-block
  .m20
    = form_for @pub do |f|
      .mb15
        = f.label :title,
          t(:title_lable, scope: scope),
          class: 'block mb10 fs20'

        = f.text_field :title,
          size: 200, maxlength: 200,
          placeholder: t(:title_placeholder, scope: scope),
          class: 'ptz_input w80p fs18'

      .mb50
        = f.label :editor_type,
          t(:editor_type_lable, scope: scope),
          class: 'block mb10 fs16'

        = f.select :editor_type, options, {},
          autocomplete: :off,
          class: 'ptz_input ptz_size-15 w250'

      div
        = f.submit t(:submit_btn, scope: scope),
          class: 'ptz_btn ptz_size-20'
